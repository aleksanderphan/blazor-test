@using Models
@page "/list"
@rendermode InteractiveServer

<PageTitle>List</PageTitle>

<div class="container mx-auto px-4 py-6">
    <div class="flex place-content-between mb-4">
        <h3 class="text-2xl font-bold mb-4">Comments</h3>

        <div class="flex justify-center">
            <button class="px-4 mr-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded disabled:opacity-50 disabled:cursor-not-allowed" @onclick="PreviousPage" disabled="@IsPreviousDisabled">Previous</button>
            <button class="px-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded disabled:opacity-50 disabled:cursor-not-allowed" @onclick="NextPage" disabled="@IsNextDisabled">Next</button>
        </div>
    </div>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        @if (pagedComments != null && pagedComments.Count > 0)
        {
            @foreach (var comment in pagedComments)
            {
                <div>
                    <div class="bg-gray-100 p-6 rounded-lg shadow-md hover:shadow-lg hover:scale-110 hover:-translate-y-1 transition ease-in-out duration-300">
                        <h4 class="text-lg font-semibold">@comment.Name.ToUpper()</h4>
                        <p class="text-gray-600">@comment.Email</p>
                        <p class="mt-2 text-sm">@comment.Body</p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>Loading...</p>
        }
    </div>
</div>