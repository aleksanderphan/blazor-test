@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div class="min-h-screen flex flex-col items-center bg-gray-100 text-gray-800">
    <div class="w-full bg-gray-900 text-white shadow sticky top-0">
        <nav class="container mx-auto flex justify-center space-x-8 py-2">
            <a href="#about" class="hover:text-gray-300">About</a>
            <a href="#projects" class="hover:text-gray-300">Projects</a>
            <a href="#contact" class="hover:text-gray-300">Contact</a>
        </nav>
    </div>

    <section class="container mx-auto flex flex-col items-center py-16">
        <h1 class="text-5xl font-bold mb-4">Hello, I'm [Your Name]</h1>
        <p class="text-xl text-gray-600 mb-8">A passionate developer who loves building amazing web applications.</p>
        <a href="#projects" class="px-6 py-3 bg-blue-600 text-white rounded-full shadow-lg hover:bg-blue-700">View My Work</a>
    </section>

    <section id="about" class="container mx-auto py-16 flex flex-col items-center">
        <h2 class="text-4xl font-bold mb-4">About Me</h2>
        <p class="text-lg text-gray-600 max-w-2xl text-center">I am a full-stack developer with experience in Blazor, Tailwind CSS, and other modern web technologies. I love creating beautiful and functional web applications that provide a great user experience.</p>
    </section>

    <section id="projects" class="container mx-auto py-16">
        <h2 class="text-4xl font-bold text-center mb-8">My Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <div class="bg-white p-6 rounded-lg shadow-lg">
                <img src="https://via.placeholder.com/300" alt="Project Image" class="w-full h-48 object-cover mb-4 rounded-t-lg">
                <h3 class="text-2xl font-bold mb-2">Project Title</h3>
                <p class="text-gray-600 mb-4">Brief description of the project. Highlight key features and technologies used.</p>
                <a href="#" class="text-blue-600 hover:underline">View Details</a>
            </div>
        </div>
    </section>

    <section id="contact" class="container mx-auto py-16 flex flex-col items-center">
        <h2 class="text-4xl font-bold mb-4">Contact Me</h2>
        <form class="w-full max-w-lg">
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="name">Name</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="name" type="text" placeholder="Your Name">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="email">Email</label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="email" type="email" placeholder="Your Email">
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="message">Message</label>
                <textarea class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" id="message" placeholder="Your Message"></textarea>
            </div>
            <div class="flex items-center justify-between">
                <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="button">Send</button>
            </div>
        </form>
    </section>

    <footer class="w-full bg-white py-4 text-center">
        <p class="text-gray-600">&copy; 2024 [Your Name]. All rights reserved.</p>
    </footer>
</div>
